/* pages/member_c/member.wxss */
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}
.item-title{
  padding: 40rpx 10rpx;
  background-color: #f5f5f5;
}
.col{
  flex: 1;
  text-align: center;
}
.col-line{
  border:1rpx solid #ececec;
  text-align: left;
  border-radius: 10rpx;
  box-shadow: -1px 1px 4px 2px rgba(0,0,0,0.05);
}
.col-r-10{
  margin-left: 15rpx;
}
.col-l-10{
  margin-right: 15rpx;
}
.numeber{
  color: #CD2E2E;
  font-size: 52rpx;
  font-weight: bold;
}
.text-block{
  color: #999;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.item-top{
  padding-top: 20rpx;
  border-top: 1rpx solid #ececec;
}
.tab-body{
  flex: 1;
}
.tab-right{
  width: 180rpx;
}
.title{
  border-bottom: 1rpx solid #ececec;
  padding: 15rpx;
  background-color: #f5f5f5;
  font-weight: bold;
  font-size: 28rpx;
  color: #666;
}
.text-body{
  padding: 20rpx 15rpx;
  font-size: 28rpx;
}
.text{
  color: #999;
}
.title-r{
  padding: 30rpx 10rpx;
}
.tab-body{
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: space-between;
}
.tab{
  flex: 1;
  text-align: center;
  padding: 15rpx 5rpx;
  background-color: #f1f1f1;
  color: #666;
  border-right: 1rpx solid #ececec;
  border-left: 1rpx solid #ffffff;
}
.tab-active{
  background-color: #666;
  color:#ffffff;
}
.tab:first-child{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-left: none;
}
.tab:last-child{
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  border-right: none;
}
.tab-right{
  text-align: center;
  margin-left: 20rpx;
  background-color: #f1f1f1;
  padding: 15rpx 5rpx;
  border-radius: 10rpx;
}