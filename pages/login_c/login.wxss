/* pages/login_c/login.wxss */
.form{
  padding: 30rpx 80rpx;
  display: block;
  font-size:30rpx;
  margin-top: 10vh;
}
.form input{
  border: 1rpx solid #ccc;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
}
.code{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.code input{
  flex: 1;
}
.btn{
  width: 260rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  margin-left: 10rpx;
  padding: 15rpx 0;
  border-radius: 10rpx;
  color: #CD2E2E;
}
.btn-disabled{
  background-color: #f5f5f5;
  color: #999;
}
.btnLogin{
  margin-top: 80rpx;
}