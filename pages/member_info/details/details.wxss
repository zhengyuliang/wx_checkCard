/* pages/member_info/details/details.wxss */
.body{
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}
.item-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.title{
  flex: 1;
  font-weight: bold;
  color: #CD2E2E;
}
.btn{
  width: 180rpx;
  text-align: right;
}
.list-body{
  border: 1rpx solid #ccc;
  padding: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: -1px 1px 4px 2px rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  padding: 10rpx 0;
}
.text-title{
  width: 160rpx;
  color: #999;
}
.text-info{
  flex: 1;
  text-align: left;
  display: flex;
  flex-wrap: wrap;
}
.info-body{
  background-color: #fff;
  border:1rpx solid #ccc;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 20rpx;
  box-shadow: -1px 1px 4px 2px rgba(0,0,0,0.05);
}
.info-list{
  flex: 1;
  text-align: center;
}
.info-num{
  font-size: 36rpx;
  color: #CD2E2E;
  font-weight: bold;
}
.info-text{
  color: #999;
  margin-top: 10rpx;
}
.list{
  width: 40%;
  background-color: #f5f5f5;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}