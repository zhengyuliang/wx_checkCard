.top-wrap{
   width: 100%;
   height: 200rpx;
   position: fixed;
   top: 0;
   background: #fff;
   z-index: 99;
}
.navBar{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  position: relative;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ccc;
}
.scrollbox{
  width: 100%;
  height: auto;
}
.line{
  position: absolute;
  width: 120rpx;
  height: 4rpx;
  background:#CD2E2E;
  top:78rpx;
  left:47rpx;
} 
.line-1{
  left: 57rpx;
}
.line-2{
  left: 375rpx;
}
.line-3{
  left: 615rpx;
}
.foot{
  width: 100%;
  position: fixed;
  height: 100rpx;
  line-height: 100rpx;
  bottom: 0;
  text-align: center;
}
.scrollbox{
  margin-top: 216rpx;
}