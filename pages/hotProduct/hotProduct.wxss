.allInfo{
  display: flex;
  font-size: 26rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
  height: 105rpx;
}
.left{
  width: 8%;
  margin-top: 15rpx;
}
.count{
  width: 30rpx;
  height: 30rpx;
  background: #262626;
  color: #fff;
  border-radius: 50%;
  line-height: 30rpx;
  text-align: center;
}
.right{
  width: 95%;
}
.proInfo{
  display: flex;
  justify-content: space-between;
  padding-right: 15rpx;
  box-sizing: border-box;
}
.percent{
  width: 98%;
  height: 15rpx;
  background: #E9E9E9;
  margin-top: 10rpx;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  position: relative;
}
.propertion{
  position: absolute;
  background: linear-gradient(to right, #FF5D51, #FB8F87);
  height:15rpx;
  border-radius: 0 8rpx 8rpx 0;
}
